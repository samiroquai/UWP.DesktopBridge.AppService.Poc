<Page
    x:Class="DesktopBridge.UWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DesktopBridge.UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal" Margin="0,100,0,0">
            <TextBlock Text="Message to send"></TextBlock>
            <TextBox x:Name="messageToSend" Width="500"></TextBox>
            <Button Content="Send" Click="Button_Click"></Button>
        </StackPanel>
        <ListView x:Name="messages"></ListView>
    </StackPanel>
</Page>
